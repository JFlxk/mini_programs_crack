._a {
    display: inline;
    padding: 1.5px 0;
    color: #366092;
    word-break: break-all;
}

._hover {
    text-decoration: underline;
    opacity: .7;
}

._visited {
    color: #551a8b;
}

._img {
    position: relative;
    display: inline-block;
    max-width: 100%;
}

._blockquote,._div,._li,._ol,._p,._ul {
    display: block;
}

._b,._strong {
    font-weight: 700;
}

._code {
    font-family: monospace;
}

._del {
    text-decoration: line-through;
}

._em,._i {
    font-style: italic;
}

._h1 {
    font-size: 2em;
}

._h2 {
    font-size: 1.5em;
}

._h3 {
    font-size: 1.17em;
}

._h5 {
    font-size: .83em;
}

._h6 {
    font-size: .67em;
}

._h1,._h2,._h3,._h4,._h5,._h6 {
    display: block;
    font-weight: 700;
}

._image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}

._ins {
    text-decoration: underline;
}

._li {
    flex: 1;
    width: 0;
}

._ol-bef {
    width: 36px;
    margin-right: 5px;
    text-align: right;
}

._ul-bef {
    margin: 0 12px 0 23px;
    line-height: normal;
}

._ol-bef,._ul_bef {
    flex: none;
    user-select: none;
}

._ul-p1 {
    width: .3em;
    height: .3em;
    overflow: hidden;
    line-height: .3em;
}

._ul-p1,._ul-p2 {
    display: inline-block;
}

._ul-p2 {
    width: .23em;
    height: .23em;
    border: .05em solid #000;
    border-radius: 50%;
}

._q::after,._q::before {
    content: '"';
}

._sub {
    vertical-align: sub;
}

._sub,._sup {
    font-size: smaller;
}

._sup {
    vertical-align: super;
}

.__bdi,.__bdo,.__rt,.__ruby,._video {
    display: inline-block;
}

._video {
    position: relative;
    width: 300px;
    height: 225px;
    background-color: #000;
}

._video::after {
    position: absolute;
    top: 50%;
    left: 50%;
    margin: -15px 0 0 -15px;
    content: "";
    border-color: transparent transparent transparent #fff;
    border-style: solid;
    border-width: 15px 0 15px 30px;
}

.ql-size-small {
    font-size: 12px;
}

.ql-size-large {
    font-size: 18px;
}

.ql-size-huge {
    font-size: 32px;
}

.ql-align-left {
    text-align: left;
}

.ql-align-center {
    text-align: center;
}

.ql-align-right {
    text-align: right;
}

.ql-align-justify {
    text-align: justify;
}

.ql-indent-1 {
    padding-left: 2em;
}