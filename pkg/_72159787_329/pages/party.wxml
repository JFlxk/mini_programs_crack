                                    <image class="head" src="{{myRank.avatarUrl}}"></image>
                                    <view class="text">
                                        <view class="nameFrom">
                                            <view class="name">{{myRank.nickName}}（我）</view>
                                            <view class="from">{{myRank.orgaName||'-'}}</view>
                                        </view>
