                                        <view class="index {{index<3?'top3':''}}">{{index+1}}</view>
                                        <image class="head" src="{{item.imgurl}}"></image>
                                        <view class="text">
                                            <view class="nameFrom">
                                                <view class="name">{{item.userName}}</view>
                                            </view>
                                        </view>
                                        <view class="nubBox" style="position: absolute;right: 35rpx;display: flex;justify-content: flex-start;align-items: center">
