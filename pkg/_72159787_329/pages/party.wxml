                    </view>
                    <view class="list" wx:if="{{perceptionList.length>0}}">
                        <view class="item" wx:for="{{perceptionList}}" wx:key="index">
                            <view class="title">
                                <view class="text">{{item.resName}}</view>
                                <view bindtap="showFeeling" class="button" data-wpyshowfeeling-a="{{item.resourceId}}">听感悟</view>
                            </view>
                            <view class="category">{{item.resTypeName}}</view>
                            <view class="content">{{item.content}}</view>
                        </view>
                    </view>
                    <view class="empty" style="box-shadow: 0px 8px 30px 0px rgba(225, 225, 225, 0.5);padding:30rpx 0;" wx:else>
                        <image class="emptyImg" src="https://reading.oss.iyougu.com/ldtmp/images/party100/empty.png"></image>
                        <view>暂无数据~</view>
                    </view>
                </view>
                <view class="">
                    <view class="moduleTitle">
                        <view class="text">四史知识 每日一考</view>
                        <view bindtap="gotoHistoryRank" class="all">
                            <view>全部榜单</view>
                            <view class="iconfont icon-zhankai"></view>
