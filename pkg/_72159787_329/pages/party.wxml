                            <view class="iconfont icon-zhankai"></view>
                        </view>
                    </view>
                    <view class="media">
                        <view class="list">
                            <view bindtap="toMediaDetail" class="item" data-wpytomediadetail-a="{{item.id}}" wx:for="{{mediaList}}" wx:key="index">
                                <image class="img" src="{{item.imageUrl}}"></image>
                                <view class="text">
                                    <view class="name">{{item.title}}</view>
                                    <view class="source">来源于：{{item.media}}</view>
                                </view>
                            </view>
                        </view>
