.page {
    background-color: #fff;
}

.page .img {
    width: 100%;
}

.page .btn_masking {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 140rpx;
    background: #220802;
    opacity: .5;
}

.page .btn {
    position: fixed;
    bottom: 28rpx;
    left: 50%;
    margin-left: -280rpx;
    width: 560rpx;
    height: 90rpx;
    background: linear-gradient(180deg,#000,#ffd302 0,#fee570 0,#ffd300);
    border-radius: 45rpx;
    font-size: 42rpx;
    font-family: PingFang SC;
    font-weight: 600;
    color: #6c350f;
    display: flex;
    justify-content: center;
    align-items: center;
    animation: animation_Go 2s infinite;
}

@keyframes animation_Go {
    0% {
        transform: scale(1);
    }

    25% {
        transform: scale(1.1);
    }

    50% {
        transform: scale(1);
    }

    75% {
        transform: scale(1.1);
    }
}